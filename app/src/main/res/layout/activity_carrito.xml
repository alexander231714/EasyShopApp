<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarritoActivity">

    <RelativeLayout
        android:id="@+id/stl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/primario"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:id="@+id/precitot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TOTAL: 000"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="7dp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/msj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Compra Realizada con exito gracias por su preferencia."
        android:textColor="@color/secundario"
        android:textSize="20dp"
        android:visibility="gone"
        />


        <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/stl1"/>

    <Button
        android:id="@+id/btntran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="SIGUIENTE"
        android:textColor="@color/black"
        android:backgroundTint="@color/primario"/>




</RelativeLayout>
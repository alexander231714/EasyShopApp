<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginRight="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
<TextView
    android:id="@+id/nomprod"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Nombre del producto"
    android:textAlignment="center"
    android:textSize="25sp"
    android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imagenProd"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/nomprod"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />

        <TextView
            android:id="@+id/DescProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion del producto"
            android:layout_below="@+id/imagenProd"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/PrecProd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRECIO :"
            android:layout_below="@+id/DescProd"
            android:textAlignment="center"
            android:textSize="18dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>